$path = PATH /src/

readDir(path)

func readDir(%dir) {
    print("Reading files in directory: " + dir)
    for %file in dir {
        %isDir = ISDIR $(file)

        if isDir {
            print("")
            readDir(file)
        } else {
            print("Printing file: " + file)
            %contents = READ $(file)
            print(contents)
        }
    }
}
